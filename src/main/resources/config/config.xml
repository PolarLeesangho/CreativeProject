<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <typeAliases>
        <typeAlias alias="CADTO" type="persistence.DTO.ConsumptionAmountDTO"/>
        <typeAlias alias="CAFDTO" type="persistence.DTO.ConsumptionAmountForeignerDTO"/>
        <typeAlias alias="CAODTO" type="persistence.DTO.ConsumptionAmountOutsiderDTO"/>
        <typeAlias alias="DFPDTO" type="persistence.DTO.DailyFloatingPopulationDTO"/>
    </typeAliases>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <!--  connecting to Local MySql -->
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.cj.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://localhost/creative_project"/>
                <property name="username" value="root"/>
                <property name="password" value="1234"/>
            </dataSource>

        </environment>
    </environments>
    <mappers>
        <mapper resource="sqlmapper/consumptionAmount.xml"/>
        <mapper resource="sqlmapper/consumptionAmountForeigner.xml"/>
        <mapper resource="sqlmapper/consumptionAmountOutsider.xml"/>
        <mapper resource="sqlmapper/dailyFloatingPopulation.xml"/>
        <mapper resource="sqlmapper/admin.xml"/>
    </mappers>
</configuration>
